{
    "name": "unocha/pocam8-site",
    "description": "Protection of Civilians Aide Memoire 8",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "UNOCHA",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "composer/composer": "^2.1",
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.7",
        "drupal-composer/preserve-paths": "^0.1.6",
        "drupal/admin_denied": "^2.0",
        "drupal/azure_storage": "^2.0",
        "drupal/build_hooks": "^3.3",
        "drupal/config_split": "^2.0.0-beta4",
        "drupal/core-composer-scaffold": "^9.3",
        "drupal/core-dev": "^9.3",
        "drupal/core-project-message": "^9.3",
        "drupal/core-recommended": "^9.3",
        "drupal/ctools": "^4.0",
        "drupal/dream_block_manager": "^1.0",
        "drupal/facets": "^2.0",
        "drupal/facets_pretty_paths": "^1.1",
        "drupal/field_group": "^3.0",
        "drupal/google_tag": "^1.4",
        "drupal/lunr": "^1.0",
        "drupal/lunr_filters": "^1.0",
        "drupal/maintenance200": "^1.0",
        "drupal/search_api": "^1.19",
        "drupal/seckit": "^2.0",
        "drupal/select2": "^1.13",
        "drupal/simple_sitemap": "^4.0",
        "drupal/social_api": "^3.0",
        "drupal/social_auth": "^3.0",
        "drupal/social_auth_hid": "^3.0",
        "drupal/token": "^1.9",
        "drupal/token_filter": "^2.0",
        "drupal/tome": "^1.5",
        "drupal/tome_static_azure": "1.0.x-dev",
        "drupal/views_data_export": "^1.0",
        "drush/drush": "^10.3",
        "npm-asset/select2": "^4.0",
        "oomphinc/composer-installers-extender": "^2.0.0",
        "phpoffice/phpspreadsheet": "^1.16",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "*",
        "symfony/flex": "^1.10",
        "unocha/common_design": "^9",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/config_filter": "^2.2",
        "drupal/devel": "^5.1",
        "drupal/stage_file_proxy": "^1.1",
        "drupal/upgrade_status": "^3.7",
        "kint-php/kint": "^3.3",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^8",
        "weitzman/drupal-test-traits": "^1.3",
        "weitzman/logintrait": "^1.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
          "php": "8.0"
        },
        "bin-dir": "vendor/bin/",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal-composer/preserve-paths": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/console-extend-plugin": true,
            "oomphinc/composer-installers-extender": true,
            "symfony/flex": true
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "sass-prepare": "cd html/themes/custom/common_design_subtheme && npm install",
        "sass-build": "cd html/themes/custom/common_design_subtheme && ./node_modules/.bin/sass sass:build",
        "sass-cleanup": "cd html/themes/custom/common_design_subtheme && rm -rf ./node_modules",
        "sass": [
            "@sass-prepare",
            "@sass-build",
            "@sass-cleanup"
        ]

    },
    "extra": {
        "drush": {
          "services": {
            "drush.services.yml": "^10"
          }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches-file": "composer.patches.json",
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "html/core": ["type:drupal-core"],
            "html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset",
                "harvesthq/chosen"
            ],
            "html/modules/contrib/{$name}": ["type:drupal-module"],
            "html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
            "locations": {
                "web-root": "html/"
            }
        },
        "merge-plugin": {
            "include": [
                "html/core/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-extra": false
        }
    }
}
