{
    "name": "unocha/pocam8-site",
    "description": "Protection of Civilians Aide Memoire 8",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "UNOCHA",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=7.2",
        "composer/composer": "^2.1",
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/admin_denied": "^1.1",
        "drupal/core-composer-scaffold": "^9.2.1",
        "drupal/core-dev": "^9.2.1",
        "drupal/core-project-message": "^9.2.1",
        "drupal/core-recommended": "^9.2.1",
        "drupal/ctools": "^3.7",
        "drupal/dream_block_manager": "^1.0",
        "drupal/facets": "^1.8.0",
        "drupal/facets_pretty_paths": "^1.1",
        "drupal/field_group": "^3.0",
        "drupal/google_tag": "^1.4",
        "drupal/maintenance200": "^1.0",
        "drupal/search_api": "^1.19",
        "drupal/select2": "^1.13",
        "drupal/simple_sitemap": "^3.10",
        "drupal/social_api": "^2.0-rc4",
        "drupal/social_auth": "^2.0-rc4",
        "drupal/social_auth_hid": "2.x-dev",
        "drupal/token": "^1.9",
        "drupal/token_filter": "^1.2",
        "drupal/views_data_export": "^1.0",
        "drush/drush": "^10.3",
        "npm-asset/select2": "^4.0",
        "oomphinc/composer-installers-extender": "^2.0.0",
        "phpoffice/phpspreadsheet": "^1.16",
        "squizlabs/php_codesniffer": "*",
        "symfony/flex": "^1.10",
        "unocha/common_design": "^4.0.0",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/console": "^1.0.2",
        "drupal/devel": "^4.1.1",
        "drupal/upgrade_status": "^3.7",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "^8",
        "weitzman/drupal-test-traits": "^1.3",
        "weitzman/logintrait": "^1.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
      "platform": {
        "php": "7.3"
      },
      "bin-dir": "vendor/bin/",
      "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "sass-prepare": "cd html/themes/custom/common_design_subtheme && npm install",
        "sass-build": "cd html/themes/custom/common_design_subtheme && ./node_modules/.bin/sass sass:build",
        "sass-cleanup": "cd html/themes/custom/common_design_subtheme && rm -rf ./node_modules",
        "sass": [
            "@sass-prepare",
            "@sass-build",
            "@sass-cleanup"
        ]

    },
    "extra": {
    "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches-file": "composer.patches.json",
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "html/core": ["type:drupal-core"],
            "html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset",
                "harvesthq/chosen"
            ],
            "html/modules/contrib/{$name}": ["type:drupal-module"],
            "html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
            "locations": {
                "web-root": "html/"
            }
        },
        "merge-plugin": {
            "include": [
                "html/core/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-extra": false
        }
    }
}
