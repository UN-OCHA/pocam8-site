{
    "name": "unocha/pocam8-site",
    "description": "Protection of Civilians Aide Memoire 8",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "UNOCHA",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "php": ">=8.1",
        "composer/composer": "^2.1",
        "composer/installers": "^1.7",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_denied": "^2.0",
        "drupal/build_hooks": "^3.3",
        "drupal/ckeditor": "^1.0",
        "drupal/classy": "^1.0",
        "drupal/config_split": "^2.0.0-beta4",
        "drupal/core-composer-scaffold": "^10",
        "drupal/core-project-message": "^10",
        "drupal/core-recommended": "^10",
        "drupal/ctools": "^4.0",
        "drupal/facets": "^2.0",
        "drupal/facets_pretty_paths": "^1.1",
        "drupal/field_group": "^3.0",
        "drupal/google_tag": "^1.4",
        "drupal/lunr": "^1.0",
        "drupal/lunr_filters": "^2.0",
        "drupal/maintenance200": "^1.1",
        "drupal/quickedit": "^1.0",
        "drupal/rdf": "^2.1",
        "drupal/search_api": "^1.19",
        "drupal/seckit": "^2.0",
        "drupal/select2": "^1.13",
        "drupal/seven": "^1.0",
        "drupal/simple_sitemap": "^4.0",
        "drupal/social_api": "^3.0",
        "drupal/social_auth": "^3.0",
        "drupal/social_auth_hid": "^3.0",
        "drupal/token": "^1.9",
        "drupal/token_filter": "^2.0",
        "drupal/tome": "^1.5",
        "drupal/views_data_export": "^1.0",
        "drush/drush": "^12",
        "mglaman/composer-drupal-lenient": "^1.0",
        "npm-asset/select2": "^4.0",
        "oomphinc/composer-installers-extender": "^2.0.0",
        "phpoffice/phpspreadsheet": "^1.16",
        "unocha/common_design": "^9"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "vendor/bin/",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "drupal/console-extend-plugin": true,
            "oomphinc/composer-installers-extender": true,
            "orakili/composer-drupal-info-file-patch-helper": true,
            "mglaman/composer-drupal-lenient": true
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "sass-prepare": "cd html/themes/custom/common_design_subtheme && npm install",
        "sass-build": "cd html/themes/custom/common_design_subtheme && ./node_modules/.bin/sass sass:build",
        "sass-cleanup": "cd html/themes/custom/common_design_subtheme && rm -rf ./node_modules",
        "sass": [
            "@sass-prepare",
            "@sass-build",
            "@sass-cleanup"
        ]

    },
    "extra": {
        "drush": {
          "services": {
            "drush.services.yml": "^10"
          }
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "patches-file": "composer.patches.json",
        "installer-types": ["bower-asset", "npm-asset"],
        "installer-paths": {
            "html/core": ["type:drupal-core"],
            "html/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset",
                "harvesthq/chosen"
            ],
            "html/modules/contrib/{$name}": ["type:drupal-module"],
            "html/profiles/contrib/{$name}": ["type:drupal-profile"],
            "html/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                ".editorconfig": "../.editorconfig",
                ".gitattributes": "../.gitattributes"
            },
            "locations": {
                "web-root": "html/"
            }
        },
        "merge-plugin": {
            "include": [
                "html/core/composer.json"
            ],
            "recurse": true,
            "replace": false,
            "merge-extra": false
        },
        "drupal-lenient": {
            "allowed-list": [
                "drupal/maintenance200"
            ]
        }

    }
}
